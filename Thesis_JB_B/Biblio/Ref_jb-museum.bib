   issue = {1},
   journal = {Icarus},
   keywords = {Collisional physics,Experimental techniques,Planetesimals,Solar System origin,Solar nebula},
   month = {1},
   pages = {138-146},
   title = {Experiments on Sticking, Restructuring, and Fragmentation of Preplanetary Dust Aggregates},
