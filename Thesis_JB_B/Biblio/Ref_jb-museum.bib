   pages = {38},
   title = {Collisional Growth and Fragmentation of Dust Aggregates. II. Mass Distribution of Icy Fragments},
   volume = {944},
   url = {https://iopscience.iop.org/article/10.3847/1538-4357/acadda},
   year = {2023},
}
